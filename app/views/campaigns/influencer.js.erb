
import Rails from 'rails-ujs';

   var checkBoxes = document.querySelectorAll(".form-check-input");
    var form = document.querySelector('form');

    for (const check of checkBoxes) {
    check.addEventListener( 'change', function() {
      Rails.fire(form, 'submit');
    });
    }


function replaceInfluencers (innerHTML) {
  const influencers = document.getElementById('influencers');
  influencers.innerHTML = innerHTML;
}
if ('<%= @filtrer %>' === "[]") {
replaceInfluencers("<%= j render 'influencer', influencers: Influencer.all %>");
}
else {
replaceInfluencers("<%= j render 'influencer', influencers: @influencers %>");
}
