<h6> Étape 2 : Sélectionner les influenceurs </h6>
<div class="container" id="edit-influencers">
    <%= simple_form_for :query, url: edit_campaign_path(@campaign), method: :get, remote: true do |f| %>
      <div class="d-flex flex-row align-items-start justify-content-around containetape2">
        <h1>Filtrer vos influenceurs !</h1>
        <%= f.input :ages, label: "Ages", collection: $ages, as: :check_boxes %>
        <%= f.input :medias, label: "Média", collection: $medias, as: :check_boxes %>
        <%= f.input :sizes, label: "Taille de Communauté", collection: $sizes, as: :check_boxes %>
        <%= f.input :sizes, label: "Localisation", collection: $locations, as: :check_boxes %>
        <%= f.submit "Filtrer", class: "btn-ghost" %>
      </div>
    <% end %>

    <div class="d-flex flex-row flex-wrap align-items-middle mt-4" id="influencers">
      <%= render 'influencer', influencers: @influencers, as: :check_boxes %>
    </div>

    <%= simple_form_for(@campaign) do |f| %>
      <input type="text" name="selection" id="added-influencers" class='d-none'>
      <div class="d-flex justify-content-center">
        <%= f.submit 'Next', class: 'btn btn-primary mb-5' %>
      </div>
    <% end %>
</div>
