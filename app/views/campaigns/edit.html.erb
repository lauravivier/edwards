<%= form_tag edit_campaign_path, method: :get do %>
  <%= text_field_tag :community_location,
  params[:community_location],
  class: "form-control",
  placeholder: "Find a city"
  %>

  Réseau
  <%= select_tag :media, options_for_select(Influencer.pluck(:media).uniq, '') %>

  Âge
  <%= select_tag :community_age, options_for_select(Influencer.pluck(:community_age).uniq, '') %>

  Taille de la communauté
  <%= select_tag :community_size, options_for_select(Influencer.pluck(:community_size).uniq, '') %>

  Genre
  <%= select_tag :men_stats, options_for_select(Influencer.pluck(:men_stats).uniq, '') %>

  Taux d'engagement
  <%= select_tag :engagement_rate, options_for_select(Influencer.pluck(:engagement_rate).uniq, '') %>
  <%= submit_tag 'Validate' %>
<% end %>

<div class="container">
  <%= simple_form_for(@campaign) do |f| %>
    <%= f.input :name %>

    <%= simple_fields_for :selection do |x| %>
      <% @influencers.each do |i| %>
        <%= render 'influencer_card', influencer: i %>
        <%= x.input i.name.to_sym, as: :boolean, input_html: { id: "checkbox-#{i.id}" } %>
      <% end %>
    <% end %>
    <%= f.submit %>
  <% end %>
</div>
