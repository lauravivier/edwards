<div class="container-fluid">
  <div class="h-5 bg-white">
    <div class="col-xs-12">
      <div class="flexf">
        <div class="signup-form">
          <div class="flex-column p-1 s">
            CONNEXION MARQUE
          </div>


          <div class="">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="signup-form txtform">
              <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "Email" } %>

              <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "Mot de passe" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="blueb">
              <%= f.button :submit, "Connexion", class: "d-block mx-auto txtbtn" %>
            </div>

            <% end %>
            <%= render "devise/shared/links" %>
          </div>
      </div>

        <div class="image-form">
          <div class="">
           <%= image_tag "https://res.cloudinary.com/danxfwhmp/image/upload/c_scale,q_100,r_0,w_1500/v1581164733/403462d712903281ced4092186dc8b20_ep7pxh.jpg", alt: "Edwards", width: 500, class: "d-block mx-auto" %>
          </div>
        </div>
    </div>
  </div>
</div>


