<div class="container-fluid" style="padding: 0">
  <div class="h-5 bg-white">
    <div class="col-xs-12">
      <div class="flexf">
        <div class="image-form2 flex-column col-8">
          <%= image_tag "sign_pica.png"%>
        </div>

        <div class="col-4">
          <div class="flex-column p-1 s">
            <br>
            <div>Connectez-vous !</div>
          </div>

          <div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="signup-form txtform">
              <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "Email" } %>

              <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "Mot de passe" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div>
              <%= f.button :submit, "Connexion", class: " btn-ghost d-block mx-auto" %>
            </div>

            <% end %>

            <%= render "devise/shared/links" %>
          </div>
      </div>

    </div>
  </div>
</div>


